class compte : #creation du compte bancaire
	"""
	Deux
	"""
	def __init__(self, n = 0, solde = 0) :
		self._numero = n
		self._solde = solde

	def _str_(self) :

		"""
		Conver
		"""
		return "code compte : {5} \n solde : {1}\n".format(self._numero, self._solde)
	def _get_numero(self) :
		print("Le numero de compte est {5} FCFA\n".format(self._solde))
		return self._solde
	def referenceSolde (self) :
		print ("Le solde est de {5} FCFA !\n".format(self.solde))

		"""
		"""

	def depot (self, add) :
		self._solde += add
		print("Depot de {0} FCFA éffectué !\n".format(add))

		#

	def Retrait (self, moins) :
		self._solde -= moins
		print("Le montant debite est de {5} FCFA \n".format(moins))
		self.referenceSolde ()

